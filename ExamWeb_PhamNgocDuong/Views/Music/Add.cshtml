@model DiaNhac
<form asp-action="Add" method="post">
    <h2>Thêm Mới</h2>
    <hr />
    <div class="form-group">
        <label>Tựa Đề</label>
        <input asp-for="TuaCD" class="form-control" />
        <span asp-validation-for="TuaCD" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Nghệ Sĩ</label>
        <input asp-for="NgheSi" class="form-control" />
        <span asp-validation-for="NgheSi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>thể loại</label>
       
        <div class="form-check form-check">
            <input class="form-check-input" type="radio" asp-for="TrongNuoc" value="true">
            <label class="form-check-label" asp-validation-for="TrongNuoc" >Trong Nước</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="TrongNuoc" value="false">
            <label class="form-check-label" asp-validation-for="TrongNuoc" >Nước Ngoài</label>
        </div>
    </div>
    <div class="form-group">
        <label>Số Lượng</label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Giá Bán</label>
        <input asp-for="GiaBan" class="form-control" />
        <span asp-validation-for="GiaBan" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary"> Thêm </button>
    <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
</form>